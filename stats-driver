import java.util.Scanner;
public class StatsTest{
	public static void main(String[] args){

		String input;
		Scanner keyboard = new Scanner (System.in);
		Stats test = new Stats();

		do
		{
			System.out.println("Enter a set of numbers then type (quit) when you're finished ");
			input = keyboard.nextLine();
			while (!input.equalsIgnoreCase("quit")){
				test.add(Integer.parseInt(input));
				input = keyboard.nextLine();
			}
			displayResults(test);
			System.out.println("Would you like to enter another set of numbers, (y/n)?");
			input = keyboard.nextLine();
			test.reset();
		}while (!input.equalsIgnoreCase("n"));
	}

	private static void displayResults(Stats test){
		System.out.println("Total numbers entered        " + test.getCount());
		System.out.println("Sum of all numbers           " + test.computeSum());
		System.out.printf("Average sum of numbers       %,.2f%n", test.computeAvg());
		System.out.println("Number of positive integers  " + test.getNumPositive());
		System.out.println("Number of negative integers  " + test.getNumNegative());
		System.out.println("Number of zeros counted      " + test.getNumZero());
		System.out.println("Largest number found         " + test.getLargest());
		System.out.println("Smallest number found        " + test.getSmallest());
	}
}
